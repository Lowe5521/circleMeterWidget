<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circleMeter="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <com.jonkoester.circlemeterwidget.CircleMeterView
            android:id="@+id/circleMeterWidgetTest"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <View
            android:layout_width="100dp"
            android:layout_height="1dp" />

        <com.jonkoester.circlemeterwidget.CircleMeterView
            android:id="@+id/circleMeterWidgetPercent"
            android:layout_width="100dp"
            android:layout_height="100dp"
            circleMeter:actualUnitsText="30"
            circleMeter:totalUnitsText="%" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/plusFiveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+5" />

        <Button
            android:id="@+id/minusFiveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <com.jonkoester.circlemeterwidget.CircleMeterView
            android:layout_width="100dp"
            android:layout_height="100dp"
            circleMeter:actualUnitsText="67"
            circleMeter:circleFill="true"
            circleMeter:actualUnitsTextColor="@color/white"
            circleMeter:totalUnitsTextColor="@color/white"
            circleMeter:progressBarColor="@color/blue"/>

        <View
            android:layout_width="100dp"
            android:layout_height="1dp" />

        <com.jonkoester.circlemeterwidget.CircleMeterView
            android:layout_width="100dp"
            android:layout_height="100dp"
            circleMeter:actualUnitsText="77"
            circleMeter:totalUnitsText="450"
            circleMeter:actualUnitsTextColor="@color/orange"
            circleMeter:totalUnitsTextColor="@color/red"
            circleMeter:circleFill="true"
            circleMeter:circleFillColor="@color/green"
            circleMeter:totalBackgroundColor="@color/black"
            circleMeter:progressBarColor="@color/blue"/>

    </LinearLayout>


</LinearLayout>
